<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="net.uberfoo.badgelife.trivia.badgersscoreboard.MainController">
    <Tab text="Setup">
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="createGameButton" onAction="#onCreateGameButton" text="Create Game"/>
            <Button fx:id="loadGameButton" mnemonicParsing="false" text="Load Game"/>
            <TextArea fx:id="gameTextArea" editable="false" prefHeight="200.0" prefWidth="200.0"/>
        </VBox>
    </Tab>
    <Tab fx:id="gameTab" text="Game">
        <VBox prefHeight="200.0" prefWidth="100.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="showScoreboardButton" mnemonicParsing="false" onAction="#onShowScoreboardButton"
                    text="Show Scoreboard"/>
        </VBox>
    </Tab>
</TabPane>
